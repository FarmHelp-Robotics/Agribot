<launch>
  <!-- Arguments with sensible defaults -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="verbose" default="true"/>
  <arg name="rvizconfig" default="$(find chimera_description)/rviz/urdf.rviz" />

  <!-- TODO: Change this to a world full of rows of tomato plants -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="$(arg debug)" />
    <arg name="verbose" value="$(arg verbose)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro '$(find chimera_description)/urdf/chimera.urdf.xacro'"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find chimera_sim)/config/gazebo_controllers.yaml" command="load"/>

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" args="joint_state_controller
					    joint21_position_controller 
					    joint32_position_controller 
					    joint43_position_controller 
					    joint54_position_controller
					    joint65_position_controller
					    wrist_position_controller
					    hand_position_controller"/>
  
  <!-- spawn the URDF in the sim -->
  <node name="chimera_model_spawner" pkg="gazebo_ros" type="spawn_model"
        args="-z 0.1 -unpause -urdf -model chimera -param robot_description" respawn="false" output="screen" />

  <node name="gazebo_robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <param name="publish_frequency" type="double" value="30.0" />
  </node>	  

</launch>
