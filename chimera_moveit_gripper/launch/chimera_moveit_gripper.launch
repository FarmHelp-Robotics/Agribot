<launch>

  <!-- specify the planning pipeline -->
  <arg name="pipeline" default="ompl" />

  <!-- By default, we do not start a database (it can be large) -->
  <arg name="db" default="false" />
  <!-- Allow user to specify database location -->
  <arg name="db_path" default="$(find chimera_moveit_gripper)/default_warehouse_mongo_db" />
  
  <!-- IntelRealSense 405d camera node  -->  
  <include file="$(find realsense2_camera)/launch/rs_camera.launch" />
 
  <!-- By default, we are not in debug mode -->
  <arg name="debug" default="false" />

  <!-- By default, we will load or override the robot_description -->
  <arg name="load_robot_description" default="true"/>

  <!-- Set execution mode for fake execution controllers -->
  <arg name="fake_execution_type" default="last point" />
  
  <arg name="use_gui" default="false" />
  <arg name="use_rviz" default="true" />

  <!-- We do not have a robot connected, so publish fake joint states -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" unless="$(arg use_gui)">
    <rosparam param="source_list">[move_group/joint_states]</rosparam>
  </node>
  <node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" if="$(arg use_gui)">
    <rosparam param="source_list">[move_group/joint_states]</rosparam>
  </node>
  
  <!-- Load controllers -->
  <rosparam file="$(find chimera_moveit_gripper)/config/ros_controllers.yaml" command="load"/>

  <!-- Start the controller manager -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"
      args="arm_group_controller gripper_group_controller joint_state_controller"/>  <!-- Add your controller names here -->
      
  <!-- Given the published joint states, publish tf for the robot links -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" />      
  
  <!-- Run the main MoveIt! executable without trajectory execution (we do not have controllers configured by default) -->
  <include file="$(find chimera_moveit_gripper)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="false"/> <!-- Set to false for real robot -->
    <arg name="fake_execution_type" value="$(arg fake_execution_type)" />
    <arg name="info" value="true"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="pipeline" value="$(arg pipeline)"/>
    <arg name="load_robot_description" value="$(arg load_robot_description)"/>
  </include> 

  <!-- Run Rviz and load the default config to see the state of the move_group node -->
  <include file="$(find chimera_moveit_gripper)/launch/moveit_rviz.launch" if="$(arg use_rviz)">
    <arg name="rviz_config" value="$(find chimera_moveit_gripper)/launch/moveit.rviz"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>
  
  <!-- To get xyz coordinates -->
  <node name="tomato_tracker" pkg="chimera_moveit_gripper" type="xyz_coord.py" output="screen" />
 
  <!-- If database loading was enabled, start mongodb as well -->
  <include file="$(find chimera_moveit_gripper)/launch/default_warehouse_db.launch" if="$(arg db)">
    <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
  </include>

</launch>

