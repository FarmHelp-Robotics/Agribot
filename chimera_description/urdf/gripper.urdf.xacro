<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find chimera_description)/urdf/inertial.xacro"/>
  
  <xacro:macro name="gripper" params="end_effector_link originxyz originrpy">
    <link name="gripper_base">
      <visual>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/gripper_base.stl"/>
	</geometry>
	<material name="">
	  <color rgba="0.7 0.7 0.7 1"/>
	</material>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </visual>
      <collision>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/gripper_base.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </collision>
      <xacro:box_inertial m="0.1" w="0.01" d="0.01" h="0.01"/>
    </link>

    <link name="left_finger">
      <visual>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/left_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
	<material name="">
	  <color rgba="0.7 0.7 0.7 1"/>
	</material>
      </visual>
      <collision>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/left_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </collision>
      <xacro:box_inertial m="0.05" w="0.005" d="0.005" h="0.005"/>
    </link>

    <link name="right_finger">
      <visual>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/right_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
	<material name="">
	  <color rgba="0.7 0.7 0.7 1"/>
      </material>
      </visual>
      <collision>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/right_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </collision>
      <xacro:box_inertial m="0.05" w="0.005" d="0.005" h="0.005"/>
    </link>
    
    <joint name="gripper_base_joint" type="fixed">
      <parent link="${end_effector_link}"/>
      <child link="gripper_base"/>
      <origin xyz="${originxyz}" rpy="${originrpy}"/>
    </joint>

    <joint name="right_finger_joint" type="revolute">
      <axis xyz="0 0 -1"/>
      <limit effort = "10.0" lower = "0.0" upper = "0.75" velocity = "0"/>
      <parent link="gripper_base"/>
      <child link="right_finger"/>
      <origin xyz= "0 -0.008 0.00602" rpy = "0 0 0"/>  
    </joint>

    <joint name="left_finger_joint" type="revolute">
      <axis xyz="0 0 1"/>
      <limit effort = "10.0" lower = "0.0" upper = "0.75" velocity = "0"/>
      <parent link="gripper_base"/>
      <child link="left_finger"/>
      <origin xyz= "0 -0.008 0.00602" rpy = "0 0 0"/>  
    </joint>
    
  </xacro:macro>
</robot>
