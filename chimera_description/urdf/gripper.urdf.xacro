<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find chimera_description)/urdf/inertial.xacro"/>
  
  <xacro:macro name="gripper" params="wrist_link originxyz originrpy">
    <link name="gripper_base">
      <visual>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/gripper_base.stl"/>
	</geometry>
	<material name="">
	  <color rgba="0.7 0.7 0.7 1"/>
	</material>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </visual>
      <collision>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/gripper_base.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </collision>
      <xacro:box_inertial m="0.025" w="0.1" d="0.1" h="0.1"/>
    </link>

    <link name="left_finger">
      <visual>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/left_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
	<material name="">
	  <color rgba="0.7 0.7 0.7 1"/>
	</material>
      </visual>
      <collision>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/left_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </collision>
      <xacro:box_inertial m="0.01" w="0.1" d="0.1" h="0.1"/>
    </link>

    <link name="right_finger">
      <visual>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/right_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
	<material name="">
	  <color rgba="0.7 0.7 0.7 1"/>
	</material>
      </visual>
      <collision>
	<geometry>
	  <mesh filename="package://chimera_description/meshes/right_finger.stl"/>
	</geometry>
	<origin xyz = "0.0 0 0 " rpy = " 0 0 0"/>
      </collision>
      <xacro:box_inertial m="0.01" w="0.1" d="0.1" h="0.1"/>
    </link>
    
    <joint name="gripper_base_joint" type="fixed">
      <parent link="${wrist_link}"/>
      <child link="gripper_base"/>
      <origin xyz="${originxyz}" rpy="${originrpy}"/>
    </joint>

    <joint name="right_finger_joint" type="revolute">
      <axis xyz="0 0 -1"/>
      <limit effort = "1.0" lower = "0" upper = "1.0" velocity = "1.5"/>
      <parent link="gripper_base"/>
      <child link="right_finger"/>
      <origin xyz= "0.0 -0.008 0.00602" rpy = "0 0 0"/>  
    </joint>

    <joint name="left_finger_joint" type="revolute">
      <mimic joint="right_finger_joint"/>
      <axis xyz="0 0 1"/>
      <limit effort = "1.0" lower = "0" upper = "1.0" velocity = "1.5"/>
      <parent link="gripper_base"/>
      <child link="left_finger"/>
      <origin xyz= "0.0 -0.008 0.00602" rpy = "0 0 0"/>  
    </joint>

    <!-- TODO: Might still need both transmissions? -->
    <transmission name="trans_hand">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="right_finger_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="hand_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <gazebo>
      <plugin name="mimic_joints" filename="libroboticsgroup_upatras_gazebo_mimic_joint_plugin.so">
	<joint>right_finger_joint</joint>
	<mimicJoint>left_finger_joint</mimicJoint>
      </plugin>
    </gazebo>
  </xacro:macro>
</robot>
