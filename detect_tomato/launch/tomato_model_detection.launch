<launch>
    <!-- Argument to control whether to use the color camera -->
    <arg name="colorCamera" default="true"/>
    
    <!-- Include the appropriate camera launch file based on the colorCamera argument -->
    <!-- <include if="$(arg colorCamera)" file="$(find astra_camera)/launch/astrapro.launch"/> -->
    <!-- <include unless="$(arg colorCamera)" file="$(find astra_camera)/launch/astra.launch"/> -->

    <include file="$(find realsense2_camera)/launch/rs_camera.launch" />
    <!-- Start the tomato detector node -->
    <node name="tomato_detector" pkg="detect_tomato" type="direct_tomato_detector2.py" output="screen">
        <param name="image_topic" value="/camera/color/image_raw" />
    </node>
</launch>
